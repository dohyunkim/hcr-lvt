lookup tonemarkNoHang {
    sub [ uni302E uni302F ] by [ uni302E.other uni302F.other ] ;
} tonemarkNoHang;

feature ccmp {
    lookup OldChosong ;
    lookup OldJungsong ;
    lookup OldJongsong ;

	script latn;
	lookup tonemarkNoHang ;
	script DFLT;
	lookup tonemarkNoHang ;
} ccmp;

